<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:outlineAmbientShadowColor="@color/black"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/basketitemname"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="TextViewName"
                android:textColor="@color/niceOrange"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/basketitemcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="code"
                android:textColor="#989797" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/basketincrease"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:tint="@color/niceOrange"
                android:src="@drawable/ic_baseline_add_circle_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/basketitem_amount"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/basketdecrease"
                android:tint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_baseline_remove_circle_24"/>

        </LinearLayout>

        <TextView
            android:id="@+id/basketitemprice"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Price $$$"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/roundedbuttonblack"
            android:src="@drawable/ic_x"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:textSize="13dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>